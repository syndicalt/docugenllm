        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	const table = current.getTableName();
	const uri = gs.action.getGlideURI().toString().indexOf(`${table}_list.do`) === 0;
	const viewGr = new GlideRecord('sys_ui_view');
		viewGr.get(RP.getViewID());
	const view = viewGr.getDisplayValue();

	if(uri && view == 'DocuGenLLM View') {
		let storySet = new Set();
		const docugenGr = new GlideRecord('u_docugen_code_docs');
		docugenGr.addEncodedQuery('u_storiesISNOTEMPTY');
		docugenGr.query();

		while(docugenGr.next()) {
			docugenGr.u_stories.split(',').forEach(story => {
				storySet.add(story.toString());
			});
		}

		gs.addInfoMessage('Note: View has been filtered to show only DocuGenLLM-linked stories.');
		current.addEncodedQuery(`sys_idIN${ Array.from(storySet).join(',') }`);
	}
})(current, previous);]]></script>
